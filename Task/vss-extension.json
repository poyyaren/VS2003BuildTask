{
  "manifestVersion": 1,
  "id": "VS2008-Build-Task",
  "version": "0.1.0",
  "name": "Visual Studio 2008 Build Task",
  "scopes": [ "vso.build_execute", "vso.build" ],
  "description": "Builds Visual Studio .NET 2008 solutions and project files. (Is based on "VS2003-Build-Task" by "igorrosamacedo")",
  "baseUri": "",
  "publisher": "poyyaren",
  "public": true,
  "icons": {
    "default": "img/logo.png"
  },
  "targets": [
    {
      "id": "Microsoft.VisualStudio.Services"
    }
  ],
  "tags": [
    "Build",
    "VS2008"
  ],
  "links": {
    "base-project": {
      "uri": "https://github.com/igorguga/VS2003BuildTask"
    }
  },
  "branding": {
    "color": "rgb(220, 235, 252)",
    "theme": "light"
  },
  "content":
  {
    "details": {
      "path": "details.md"
    },
    "license": {
      "path": "license-terms.txt"
    }
  },
  "files": [
    {
      "path": "BuildVS2008"
    }
  ],
  "categories": [
    "Build and release"
  ],
  "contributions": [
    {
      "id": "buildvs2008",
      "targets": [
        "ms.vss-distributed-task.tasks"
      ],
      "type": "ms.vss-distributed-task.task",
      "properties": {
        "name": "BuildVS2008"
      }
    }
  ]
}
